						<div class="breadcrumbs__item breadcrumbs__item_dark breadcrumbs__item_disabled">{{product.title | scape}}</div>
					</div>
				</div>
			</div>


			<div class="product-card__content">
				<div class="row">

        {%- if product.images.size > 0 -%}
          <div class="product-card__slider-nav-container d-none d-lg-flex">
            <div class="slider-nav product-card__slider-nav">
              {%- for image in product.images -%}
                <div class="slider-nav__item">
                  <img  alt="product" class="slider-nav__image img-responsive img-width" src="{{ image | product_img_url: '240x240', scale: 2 }}" alt="{{ product.title | escape }}" />
                </div>
              {%- endfor -%}  
            </div>
          </div>
        {%- endif -%}  


				<div class="col d-lg-none">
					<div class="product-info__size">em-el</div>
					<div class="product-info__descr">{{product.title | scape}}</div>
					<div class="product-info__price-rate">
						<div class="product-info__price">{{product.price | money}}</div>
						<div class="product-info__rate"><a href="#" class="quick-link product-info__quick-link quick-link_size_sm">Be the first to review</a><img src="img/0-stars.png" alt="stars"></div>
					</div>
				</div>


        {%- if product.images.size > 0 -%}
				  <div class="product-card__slider-for-container">
					  <div class="slider-for product-card__slider-for">
              {%- for image in product.images -%}
                <div class="slider-for__item">
                  <img src="{{ image | product_img_url: 'master'}}" alt="product" class="slider-nav__image img-responsive img-width">
                </div>
              {%- endfor -%}  
            </div>
          </div>
        {%- endif -%}        

				<div class="product-card__product-info-container">
					<div class="product-info product-card__product-info">
						<div class="product-info__size d-none d-lg-block">em-el</div>
						<div class="product-info__descr d-none d-lg-block">{{product.title | scape}}</div>
						<div class="product-info__price-rate d-none d-lg-flex">
							<div class="product-info__price">{{product.price | money}}</div>
							<div class="product-info__rate"><a href="#" class="quick-link product-info__quick-link quick-link_size_sm">Be the first to review</a><img src="img/0-stars.png" alt="stars"></div>
						</div>

            {%- if product.options_with_values.size > 1 -%}               
                  {% for product_option in product.options_with_values %}
                     {{ product_option.name }}

                     {%- if product_option.name == "Color" -%}
                        <div class="product-info__color-boxes">
                     {%- else -%}
                        <div class="product-info__size-boxes">
                     {%- endif -%} 

                     
                      {% for value in product_option.values %}
                        {%- if product_option.name == "Color" -%}
                            <div class="product-info__color-box" style="background-color: {{value}}"></div>
                        {%- else -%}
                            <div class="product-info__size-box product-info__size-box_active">{{ value }}</div>
                        {%- endif -%}                        
                        {% endfor %} 

                        {%- if product_option.name == "Size" -%}
                            <a href="#" class="product-info__size-link quick-link quick-link_size_sm quick-link_dark">Size Guide</a>
                        {%- endif -%}                        
                     </div>   
                  {% endfor %}

               </div>
            {%- endif -%}            

