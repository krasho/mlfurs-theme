	<div class="banner-descr">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12 col-lg-6 banner-descr__left">
					<div class="banner-descr__left-text">
						<div class="banner-descr__left-text-large">{{section.settings.promotion_title}}</div>
						<div class="banner-descr__left-text-small">{{section.settings.promotion_subtitle}}</div>
					</div>
					<div class="banner-descr__left-code">
						<a class="quick-link banner-descr__link" href="{{section.settings.button_link}}"><span>{{section.settings.button_text}}</span></a>            
