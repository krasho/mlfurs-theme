<form id="collection-form" method="get" action="{{ collection.url }}">	
    <section class="main-category">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="main-category__top-panel">
						<div class="main-category__filter-handler filter-handler">
							<div class="filter-handler__burger">
								<span></span>
								<span></span>
								<span></span>
								<span></span>
							</div>
							<div class="filter-handler__text">Filters</div>
						</div>

						<div class="main-category__dropdown-list dropdown-list">
                        {%- assign current_sort_by = collection.sort_by | default:collection.default_sort_by -%}  
							<div class="dropdown-list__name">{{current_sort_by}}</div>                            
                                                          
                                <div class="dropdown-list__menu">
                                    <div class="dropdown-list__menu-item">
                                        <a href="#" class="dropdown-list__menu-link" data-value="manual">Featured</a>
                                    </div>
                                    <div class="dropdown-list__menu-item">
                                        <a href="#" class="dropdown-list__menu-link" data-value="title-ascending">Alphabetically, A-Z</a>
                                    </div>
                                    <div class="dropdown-list__menu-item">
                                        <a href="#" class="dropdown-list__menu-link" data-value="title-descending">Alphabetically, Z-A</a>
                                    </div>
                                    <div class="dropdown-list__menu-item">
                                        <a href="#" class="dropdown-list__menu-link" data-value="price-ascending">Price, low to high</a>
                                    </div>
                                    <div class="dropdown-list__menu-item">
                                        <a href="#" class="dropdown-list__menu-link" data-value="price-descending">Price, high to low</a>
                                    </div>                                                                        
                                </div>

                                <input type="hidden" name="sort_by" id="sort_by" value="{{current_sort_by}}">
						</div>
					</div>
				</div>
			</div>

			<div class="row">
			    
				<div class="col-lg-3 main-category__filter-container" style="display:none">
                      <div class="filter clear-filters" style="display:none;">
                         <span class="clear-filters__item-menu">
							<label class="checkbox-custom filter__checkbox-custom">
							<input name="clear_filter" data-group-name="Size" type="checkbox" value="" id="chk_clear_filter" data-url="{{collection.url}}"> 
								<i class="helper"></i> <span>Clear Filters</span></label>
	                         <label>
	                     </span>
                       </div>                  
				   <div class="filter collection-filters-container cf-select-wrapper cf-select-wrapper" style="display:none">
				   </div>
				</div>

				<div class="col">
					<div class="main-category__product-list">					   			
						<div class="row">									
						{%- if collection.products_count > 0 -%}		
							{%- paginate collection.products by 30 -%}							
									{%- for product in collection.products -%}
										<div class="col-6 col-lg-4 main-category__product" id="product-{{ forloop.index | plus:paginate.current_offset }}">
										{%-  include 'product_detail' -%}
										</div>   
									{%- endfor -%}

								{% if paginate.next %}
									<div id="more" class="more"><p>&darr; <a href="{{ paginate.next.url }}">More</a></p></div>        
								{% endif %}

								<!--{%- if paginate.pages > 1 -%}
										{{ paginate | default_pagination }}
								{%- endif -%}-->


								<div id="product-list-foot"></div>

							{%- endpaginate -%}							
						{%- else -%}
							<div style="text-align: center; width: 100%;">
							   <strong>No Found Products</strong>
							</div>

						{%- endif -%}

						</div>


						<!--<div class="text-center d-none d-md-block">
							<a href="#" class="button-preview button-preview_dark button-preview_size_sm">Learn More</a>
						</div>-->
					</div>
				</div>

			</div>

		</div>
	</section>
</form>    
